  $schema['l10n_suggestions_phrases'] = array(
    'description' => 'Translatable strings and phrases that are extracted from projects. They are only in English.',
    'fields' => array(
      'pid' => array(
        'description' => 'Internal numeric identifier for a phrase.',
        'type' => 'serial',
        'not null' => TRUE,
      ),
      'phrase' => array(
        'description' => 'The (English) phrase to be translated.',
        'type' => 'text',
        'not null' => TRUE,
      ),
      'hash' => array(
        'description' => 'hash = UNHEX(SHA1(TRIM(phrase))) Will be used for a more efficient and reliable text comparison, searching, indexing, etc.',
        'type' => 'binary',
        'length' => '20',
        'not null' => FALSE,
      ),
      'length' => array(
        'description' => 'Length of the phrase (inherited by open-trans.eu).',
        'type' => 'int',
        'size' => 'tiny',
        'not null' => FALSE,
      ),
      'plural' => array(
