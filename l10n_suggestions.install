  // Users that contribute translations/suggestions/votes.
  $schema['l10n_suggestions_users'] = array(
    'description' => 'Users that contribute translations/suggestions/votes.',
    'fields' => array(
      'uid' => array(
        'description' => 'The numeric identifier of the user.',
