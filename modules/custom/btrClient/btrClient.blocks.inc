      '#type' => 'select',
      '#title' => t('Accumulation period'),
      '#description' => t('The period during which the contributions will be counted (last week or last month).'),
      '#options' => array(
        'week' => t('Last week'),
        'month' => t('Last month'),
      ),
      '#default_value' => variable_get('btrClient_topcontrib_period', 'week'),
    );
  }

  if ($delta == 'statistics') {
  }

  if ($delta == 'latest') {
  }

  return $form;
}


/**
 * Implements hook_block_save().
 *
 * This hook declares how the configured options for a block
 * provided by this module are saved.
 */
function btrClient_block_save($delta = '', $edit = array()) {
  // We need to save settings from the configuration form.
  // We need to check $delta to make sure we are saving the right block.
  if ($delta == 'topcontrib') {
    // Have Drupal save them to the database.
    variable_set('btrClient_topcontrib_size', $edit['btrClient_topcontrib_size']);
    variable_set('btrClient_topcontrib_period', $edit['btrClient_topcontrib_period']);
  }

  if ($delta == 'statistics') {
  }

  if ($delta == 'latest') {
  }

  return;
}


/**
 * Implements hook_block_view().
 *
 * This hook generates the contents of the blocks themselves.
 */
function btrClient_block_view($delta = '') {
  //The $delta parameter tells us which block is being requested.
  switch ($delta) {
    case 'topcontrib':
      // The subject is displayed at the top of the block. Note that it
      // should be passed through t() for translation. The title configured
      // for the block using Drupal UI supercedes this one.
      $nr = variable_get('btrClient_topcontrib_size', 5);
      $block['subject'] = t('Top @nr contributors', array('@nr' => $nr));
      // The content of the block is typically generated by calling a custom
      // function.
      $block['content'] = _btrClient_block_topcontrib();
      break;
    case 'statistics':
      $block['subject'] = t('Contribution statistics');
      $block['content'] = _btrClient_block_statistics();
      break;
    case 'latest':
      $block['subject'] = t('Latest contributions');
      $block['content'] = _btrClient_block_latest();
      break;
  }

  return $block;
}


/**
 * Generate and return the content of the block topcontrib.
 */
function _btrClient_block_topcontrib() {

  $cache = cache_get('btrClient_block_topcontrib', 'cache_btrClient');
  // Return cache if possible.
  if (!empty($cache) && isset($cache->data) && !empty($cache->data)) {
    return $cache->data;
  }

  // get the list of top contributers
  try {
    $lng = variable_get('btrClient_translation_lng', 'fr');
    $period = variable_get('btrClient_topcontrib_period', 'week');
    $size = variable_get('btrClient_topcontrib_size', 5);
    $btr = wsclient_service_load('public_btr');
    $topusers = $btr->report_topcontrib($lng, $period, $size);
  }
  catch (Exception $e) {
    drupal_set_message($e->getMessage(), 'error');
    $topusers = array();
  }

  $from_date = date('Y-m-d', strtotime("-1 $period"));
  $output =  array(
    'first_para' => array(
      '#type' => 'markup',
      '#markup' => t("<p>Top !nr contributors since !date:</p>",
                 array(
                   '!nr' => $size,
                   '!date' => $from_date,
                 )),
    ),
    'second_para' => array(
      '#items' => array(),
      '#theme' => 'item_list',
    ),
  );

  foreach ($topusers as $user) {
    $args = array(
      '!uid' => $user['uid'],
      '!name' => $user['name'],
      '!mail' => $user['umail'],
      '!score' => $user['score'],
      '!nr_translations' => $user['translations'],
      '!nr_votes' => $user['votes'],
      '@url_user' => url('user/' . $user['uid']),
      '@url_translations' => url('translations/search', array(
                             'query' => array(
                               'lng' => $lng,
                               'translated_by' => $user['name'],
                               'from_date' => $from_date
                             ))),
      '@url_votes' => url('translations/search', array(
                      'query' => array(
                        'lng' => $lng,
                        'voted_by' => $user['name'],
                        'date_filter' => 'votes',
                        'from_date' => $from_date
                      ))),
    );
    $output['second_para']['#items'][] = t(" <strong><a href='@url_user' target='_blank'>!name</a></strong><br/><a href='@url_translations' target='_blank'>!nr_translations translations</a> + <a href='@url_votes' target='_blank'>!nr_votes votes</a>",
                                         $args);
  }

  // Cache for 12 hours.
  cache_set('btrClient_block_topcontrib', $output, 'cache_btrClient', time() + 12*60*60);

  return $output;
}


/**
 * Generate and return the content of the block statistics.
 */
function _btrClient_block_statistics() {

  $cache = cache_get('btrClient_block_statistics', 'cache_btrClient');
  // Return cache if possible.
  if (!empty($cache) && isset($cache->data) && !empty($cache->data)) {
    return $cache->data;
  }

  // get the statistics
  try {
    $lng = variable_get('btrClient_translation_lng', 'fr');
    $btr = wsclient_service_load('public_btr');
    $stats = $btr->report_statistics($lng);
  }
  catch (Exception $e) {
    drupal_set_message($e->getMessage(), 'error');
    $stats = array();
  }

  $output['stats'] =  array(
    '#items' => array(),
    '#theme' => 'item_list',
  );
  foreach ($stats as $period => $stat) {
    $args = array(
      '!nr_votes' => $stat['nr_votes'],
      '!nr_translations' => $stat['nr_translations'],
      '@url_votes' => url('translations/search', array(
                      'query' => array(
                        'lng' => $lng,
                        'limit' => '10',
                        'date_filter' => 'votes',
                        'from_date' => $stat['from_date'],
                      ))),
      '@url_translations' => url('translations/search', array(
                             'query' => array(
                               'lng' => $lng,
                               'limit' => '10',
                               'date_filter' => 'translations',
                               'from_date' => $stat['from_date'],
                             ))),
    );
    $output['stats']['#items'][] = t("Last $period:") . '<br/>'
      . t(" + <a href='@url_votes'>!nr_votes votes</a> <br/> + <a href='@url_translations'>!nr_translations translations</a>",
        $args);
  }
  /*
  t('Last week:');
  t('Last month:');
  t('Last year:');
  */

  // Cache for 12 hours.
  cache_set('btrClient_block_statistics', $output, 'cache_btrClient', time() + 12*60*60);

  return $output;
}


