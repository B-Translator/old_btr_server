<?php
/**
 * @file l10n_suggestion.install
 * Install and update functions for the module l10n_feedback.
 */

// get the functions for creating/deleting user preference fields and instancies
include drupal_get_path('module', 'l10n_feedback') . '/l10n_feedback.fields.inc';

// get the functions for creating/deleting a custom content type for projects
include drupal_get_path('module', 'l10n_feedback') . '/l10n_feedback.projects.inc';

/**
 * Implements hook_enable().
 */
function l10n_feedback_enable() {
  mailsystem_set(array('l10n_feedback' => 'MimeMailSystem'));
}

/**
 * Implements hook_disable().
 */
function l10n_feedback_disable() {
  mailsystem_clear(array('l10n_feedback' => 'MimeMailSystem'));
}

/**
 * Implements hook_install().
 */
function l10n_feedback_install() {
  // create custom fields for user preferencies
  l10n_feedback_create_userprofile_fields();

  // create a new content type for projects
  l10n_feedback_create_project_content_type();
}

/**
 * Implements hook_uninstall().
 */
function l10n_feedback_uninstall() {
  // delete the custom fields of user preferencies
  l10n_feedback_delete_userprofile_fields();

  // delete the project content type and anything related to it
  l10n_feedback_delete_project_content_type();

  // delete variables that were used for this module
  $variables = array(
    'l10n_feedback_voting_mode',
    'l10n_feedback_translation_lng',
    'l10n_feedback_preferred_projects',
    'l10n_feedback_export_path',
    'l10n_feedback_export_notify_admin',

    'l10n_feedback_topcontrib_size',
    'l10n_feedback_topcontrib_period',

    'l10n_feedback_crontime',
  );
  foreach ($variables as $var) {
    variable_del($var);
  }
}
